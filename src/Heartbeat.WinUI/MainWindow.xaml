<Window
    x:Class="Heartbeat.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heartbeat.WinUI"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <muxc:NavigationView 
        x:Name="Navigation"
        PaneTitle="Heartbeat"  
        PaneDisplayMode="Auto"
        AlwaysShowHeader="True"
        Header="Home"
        IsBackButtonVisible="Collapsed"
        IsBackEnabled="False"
        IsSettingsVisible="False"
        SelectionChanged="NavView_SelectionChanged">
        
        <muxc:NavigationView.MenuItems>
            <muxc:NavigationViewItem Icon="Home" Content="Home" Tag="home" />
            <muxc:NavigationViewItem Icon="Library" Content="Instance type statistics" Tag="instanceTypeStatistics" />
            <muxc:NavigationViewItem Icon="Library" Content="Icons" Tag="icons" />            
        </muxc:NavigationView.MenuItems>
        
        <Frame x:Name="contentFrame" Padding="4" Background="Transparent" Navigated="contentFrame_Navigated" />

    </muxc:NavigationView>
</Window>
